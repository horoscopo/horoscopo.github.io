---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?><rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }} </lastBuildDate>
    {% for post in site.posts limit:12 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <content:encoded><![CDATA[
           <html>
            <body>
               <article>
                  <header>
                     
                     <h1>{{ post.title | xml_escape }}</h1>
                     
                     <time class="op-modified" dateTime='{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}' />
                     
                     <figure>
                        <img src="{{ site.url }}{{ post.ogimg }}" />
                        <figcaption>{{ post.title | xml_escape }}</figcaption>
                     </figure>   
                  </header>
                  
                  {{ post.content }}
                  
                  <figure class="op-social" data-feedback="fb:likes,fb:comments">
                        <iframe class="embed-responsive-item" src="http://www.youtube.com/embed/{{ post.horoscopo.video }}" allowfullscreen></iframe>
                  </figure>
                  

                  
               </article>
            </body>
            </html>
        ]]></content:encoded>   
        <description>{{ post.content | xml_escape }}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
