---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?><rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.name | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }} </lastBuildDate>
    {% for post in site.posts limit:12 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <content:encoded><![CDATA[
           <!doctype html>
           <html lang="es" prefix="op: http://media.facebook.com/op#">
            <head>
               <meta charset="utf-8">
               <link rel="canonical" href="{{ site.url }}{{ post.url }}">
               <link rel="stylesheet" title="default" href="#">
               <title>{{ post.title | xml_escape }}</title>
               <meta property="fb:article_style" content="default">
            </head>
            <body>
               <article>
                  <header>
                     
                     <h1>{{ post.title | xml_escape }}</h1>
                     <h3 class="op-kicker">
                        Horóscopos
                     </h3>
                     <address>
                     Horóscopo del día
                     </address>

                     <time class="op-modified" dateTime='{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}' />
                     
                     <figure>
                        <img src="{{ site.url }}zodiac/{{ post.horoscopo.signo }}.jpg" />
                        <figcaption>{{ post.title | xml_escape }}</figcaption>
                     </figure>   
                  </header>
                  
                  {% if post.horoscopo.video %}
                  <figure class="op-social">
                        <iframe class="embed-responsive-item" src="http://www.youtube.com/embed/{{ post.horoscopo.video }}" allowfullscreen></iframe>
                  </figure>
                  {% endif %}

                  {{ post.content }}

                  {% if post.ogimg %}
                  <figure data-feedback="fb:likes, fb:comments">
                        <img src="{{ site.url }}{{ post.ogimg }}" />
                        <figcaption>{{ post.title | xml_escape }}</figcaption>
                  </figure>
                  {% endif %}                  

                  <footer>
                  <ul class="op-related-articles">
                     <li data-sponsored="true"><a href="{{ site.url }}"></a></li>
                  </ul>
                  </footer>

                  
               </article>
            </body>
            </html>
        ]]></content:encoded>   
        <description>{{ post.content | xml_escape }}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
